    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pipit (only when open in container)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload",
                "--nothreading"
            ],
            "django": true,
            "justMyCode": false
        }
    ]
}
